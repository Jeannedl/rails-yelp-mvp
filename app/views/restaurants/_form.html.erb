<%= simple_form_for(restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.input :phone_number %>
  <%= f.submit "#{ @restaurant.persisted? ? 'Update' : 'Declare' } found restaurant", class: 'btn btn-primary' %>
<% end %>
